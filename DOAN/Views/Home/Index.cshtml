@{
    ViewData["Title"] = "Trang chủ - DHP Store";
    var featuredProducts = ViewBag.FeaturedProducts as List<DOAN.Models.ProductViewModel>;
    var categories = ViewBag.Categories as List<DOAN.Models.Category>;
}

<!-- Hero Section -->
<section class="hero-section text-white py-5 mb-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 hero-content">
                <h1 class="display-4 fw-bold mb-4 animate__animated animate__fadeInLeft">DHP Store</h1>
                <p class="lead mb-4 animate__animated animate__fadeInLeft animate__delay-1s">Khám phá những sản phẩm công nghệ mới nhất với giá cả hợp lý và chất lượng đảm bảo.</p>
                <div class="animate__animated animate__fadeInLeft animate__delay-2s">
                    <a href="@Url.Action("Index", "Product")" class="btn btn-light btn-lg me-3 pulse">
                        <i class="fas fa-shopping-cart me-2"></i>Mua sắm ngay
                    </a>
                    <a href="@Url.Action("Index", "Product")" class="btn btn-outline-light btn-lg">
                        <i class="fas fa-search me-2"></i>Khám phá
                    </a>
                </div>
            </div>
            <div class="col-lg-6 animate__animated animate__fadeInRight">
                <div class="float">
                    <img src="https://images.unsplash.com/photo-1556742049-0cfed4f6a45d?w=600&h=400&fit=crop" alt="Electronics Store" class="img-fluid rounded shadow-lg">
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Categories Section -->
<section class="categories-section mb-5">
    <div class="container">
        <h2 class="text-center mb-5 animate__animated animate__fadeInUp">
            <i class="fas fa-th-large me-2"></i>Danh mục sản phẩm
        </h2>
        <div class="row">
            @if (categories != null)
            {
                @foreach (var category in categories)
                {
                    <div class="col-md-3 mb-4 animate__animated animate__fadeInUp">
                        <div class="card category-card h-100 text-center product-card">
                            <div class="card-body">
                                <div class="category-icon mb-3">
                                    <div class="icon primary mx-auto">
                                        @if (category.Name == "Điện thoại")
                                        {
                                            <i class="fas fa-mobile-alt"></i>
                                        }
                                        else if (category.Name == "Laptop")
                                        {
                                            <i class="fas fa-laptop"></i>
                                        }
                                        else if (category.Name == "Phụ kiện")
                                        {
                                            <i class="fas fa-headphones"></i>
                                        }
                                        else if (category.Name == "Đồng hồ")
                                        {
                                            <i class="fas fa-clock"></i>
                                        }
                                        else if (category.Name == "Tablet")
                                        {
                                            <i class="fas fa-tablet-alt"></i>
                                        }
                                        else if (category.Name == "Gaming")
                                        {
                                            <i class="fas fa-gamepad"></i>
                                        }
                                        else
                                        {
                                            <i class="fas fa-box"></i>
                                        }
                                    </div>
                                </div>
                                <h5 class="card-title fw-bold">@category.Name</h5>
                                <p class="card-text text-muted">@category.Description</p>
                                <a href="@Url.Action("Index", "Product", new { categoryId = category.Id })" class="btn btn-primary">
                                    <i class="fas fa-arrow-right me-2"></i>Xem sản phẩm
                                </a>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section>

<!-- Featured Products Section -->
<section class="featured-products-section mb-5">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="animate__animated animate__fadeInLeft">
                <i class="fas fa-star me-2"></i>Sản phẩm nổi bật
            </h2>
            <a href="@Url.Action("Index", "Product")" class="btn btn-outline-primary animate__animated animate__fadeInRight">
                <i class="fas fa-arrow-right me-2"></i>Xem tất cả
            </a>
        </div>
        <div class="row">
            @if (featuredProducts != null)
            {
                @foreach (var product in featuredProducts)
                {
                    <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                        <div class="card product-card h-100">
                            <div class="card-img-container position-relative">
                                <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name" loading="lazy">
                                @if (product.IsOnSale)
                                {
                                    <span class="product-badge sale">-@product.DiscountPercentage%</span>
                                }
                                @if (product.IsFeatured)
                                {
                                    <span class="product-badge featured">Nổi bật</span>
                                }
                            </div>
                            <div class="card-body d-flex flex-column">
                                <h6 class="card-title">@product.Name</h6>
                                <p class="card-text text-muted small flex-grow-1">@product.Description</p>
                                <div class="price-section mb-3">
                                    @if (product.IsOnSale)
                                    {
                                        <span class="text-decoration-line-through text-muted">@product.Price.ToString("N0") ₫</span>
                                        <span class="fw-bold text-danger ms-2">@product.FinalPrice.ToString("N0") ₫</span>
                                    }
                                    else
                                    {
                                        <span class="fw-bold text-primary">@product.FinalPrice.ToString("N0") ₫</span>
                                    }
                                </div>
                                <div class="d-grid gap-2">
                                    <a href="@Url.Action("Details", "Product", new { id = product.Id })" class="btn btn-outline-primary btn-sm">Xem chi tiết</a>
                                    <button class="btn btn-primary btn-sm add-to-cart" data-product-id="@product.Id">Thêm vào giỏ</button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="features-section bg-light py-5">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-4 mb-4">
                <div class="feature-item">
                    <i class="fas fa-shipping-fast fa-3x text-primary mb-3"></i>
                    <h5>Giao hàng nhanh</h5>
                    <p class="text-muted">Giao hàng trong 24h tại TP.HCM và Hà Nội</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="feature-item">
                    <i class="fas fa-shield-alt fa-3x text-primary mb-3"></i>
                    <h5>Bảo hành chính hãng</h5>
                    <p class="text-muted">Tất cả sản phẩm đều có bảo hành chính hãng</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="feature-item">
                    <i class="fas fa-headset fa-3x text-primary mb-3"></i>
                    <h5>Hỗ trợ 24/7</h5>
                    <p class="text-muted">Đội ngũ hỗ trợ khách hàng chuyên nghiệp</p>
                </div>
            </div>
        </div>
    </div>
</section>

