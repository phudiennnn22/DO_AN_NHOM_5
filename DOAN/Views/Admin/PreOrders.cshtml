                                            {
                                                <button type="button" class="btn btn-sm btn-success" onclick="confirmPreOrder(@preOrder.Id)">
                                                    <i class="fas fa-check"></i>
                                                </button>
                                                <button type="button" class="btn btn-sm btn-danger" onclick="cancelPreOrder(@preOrder.Id)">
                                                    <i class="fas fa-times"></i>
                                                </button>
                                            }
                                            @if (preOrder.Status == PreOrderStatus.Confirmed)
