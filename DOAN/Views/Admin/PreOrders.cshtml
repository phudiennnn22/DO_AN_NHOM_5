<div class="modal fade" id="preOrderModal" tabindex="-1" aria-labelledby="preOrderModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="preOrderModalLabel">DHP - Chi tiết đơn đặt hàng trước</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="preOrderDetails">
                <!-- Details will be loaded here -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>

<script>
$(document).ready(function() {
    $('#preOrdersTable').DataTable({
        "language": {
            "url": "//cdn.datatables.net/plug-ins/1.10.24/i18n/Vietnamese.json"
        },
        "pageLength": 25,
        "order": [[ 6, "desc" ]]
    });
});

function filterByStatus(status) {
    var table = $('#preOrdersTable').DataTable();
    
    if (status === 'all') {
        table.search('').draw();
    } else {
        var statusText = status === 'pending' ? 'Pending' : 
                        status === 'confirmed' ? 'Confirmed' : '';
        table.search(statusText).draw();
    }
}

function viewPreOrder(id) {
    // Simulate loading preorder details
    $('#preOrderDetails').html(`
        <div class="row">
            <div class="col-md-6">
                <h6>Thông tin khách hàng:</h6>
                <p><strong>Tên:</strong> Nguyễn Văn A</p>
                <p><strong>Email:</strong> nguyenvana@email.com</p>
                <p><strong>SĐT:</strong> 0123456789</p>
                <p><strong>Địa chỉ:</strong> 123 Đường ABC, Quận 1, TP.HCM</p>
            </div>
            <div class="col-md-6">
                <h6>Thông tin đơn hàng:</h6>
                <p><strong>Mã đơn:</strong> #PO-${id}</p>
                <p><strong>Sản phẩm:</strong> iPhone 15 Pro Max</p>
                <p><strong>Số lượng:</strong> 1</p>
                <p><strong>Giá:</strong> ₫2,500,000</p>
                <p><strong>Trạng thái:</strong> <span class="badge bg-warning">Pending</span></p>
                <p><strong>Ghi chú:</strong> Giao hàng vào cuối tuần</p>
            </div>
        </div>
    `);
    
    $('#preOrderModal').modal('show');
}

function confirmPreOrder(id) {
    if (confirm('Bạn có chắc chắn muốn xác nhận đơn hàng này?')) {
        // Simulate API call
        alert('Đơn hàng đã được xác nhận!');
        location.reload();
    }
}

function cancelPreOrder(id) {
    if (confirm('Bạn có chắc chắn muốn hủy đơn hàng này?')) {
        // Simulate API call
        alert('Đơn hàng đã được hủy!');
        location.reload();
    }
}

function completePreOrder(id) {
    if (confirm('Bạn có chắc chắn muốn hoàn thành đơn hàng này?')) {
        // Simulate API call
        alert('Đơn hàng đã được hoàn thành!');
        location.reload();
    }
}
</script>

