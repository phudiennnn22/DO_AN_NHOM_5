@{
    ViewData["Title"] = "Đặt hàng thành công";
    var orderNumber = ViewBag.OrderNumber as string;
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="text-center py-5">
                <!-- Success Icon -->
                <div class="mb-4">
                    <i class="fas fa-check-circle fa-5x text-success"></i>
                </div>
                
                <!-- Success Message -->
                <h1 class="text-success mb-3">Đặt hàng thành công!</h1>
                <p class="lead mb-4">Cảm ơn bạn đã mua sắm tại cửa hàng của chúng tôi.</p>
                
                <!-- Order Number -->
                @if (!string.IsNullOrEmpty(orderNumber))
                {
                    <div class="alert alert-info mb-4">
                        <h5 class="alert-heading">Mã đơn hàng của bạn</h5>
                        <h3 class="text-primary">@orderNumber</h3>
                        <p class="mb-0">Vui lòng lưu lại mã đơn hàng để theo dõi trạng thái giao hàng.</p>
                    </div>
                }
                
                <!-- Next Steps -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">Những bước tiếp theo</h5>
                    </div>
                    <div class="card-body">
                        <div class="row text-start">
                            <div class="col-md-4 mb-3">
                                <div class="d-flex">
                                    <div class="flex-shrink-0">
                                        <i class="fas fa-phone text-primary fa-2x"></i>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <h6>Xác nhận đơn hàng</h6>
                                        <p class="small text-muted mb-0">Chúng tôi sẽ gọi điện xác nhận đơn hàng trong vòng 30 phút.</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <div class="d-flex">
                                    <div class="flex-shrink-0">
                                        <i class="fas fa-truck text-primary fa-2x"></i>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <h6>Giao hàng</h6>
                                        <p class="small text-muted mb-0">Đơn hàng sẽ được giao trong 1-2 ngày làm việc.</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4 mb-3">
                                <div class="d-flex">
                                    <div class="flex-shrink-0">
                                        <i class="fas fa-envelope text-primary fa-2x"></i>
                                    </div>
                                    <div class="flex-grow-1 ms-3">
                                        <h6>Email xác nhận</h6>
                                        <p class="small text-muted mb-0">Bạn sẽ nhận được email xác nhận chi tiết đơn hàng.</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Action Buttons -->
                <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                    <a href="@Url.Action("Index", "Product")" class="btn btn-primary btn-lg me-md-2">
                        <i class="fas fa-shopping-bag me-2"></i>Tiếp tục mua sắm
                    </a>
                    <a href="@Url.Action("Index", "Home")" class="btn btn-outline-primary btn-lg">
                        <i class="fas fa-home me-2"></i>Về trang chủ
                    </a>
                </div>
                
                <!-- Contact Info -->
                <div class="mt-5">
                    <h6>Bạn cần hỗ trợ?</h6>
                    <p class="text-muted">
                        Liên hệ hotline: <strong>1900 1234</strong> hoặc email: <strong>support@store.com</strong>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
