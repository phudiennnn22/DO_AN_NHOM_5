@model DOAN.Models.CartViewModel
@{
    ViewData["Title"] = "Giỏ hàng";
}

<div class="container">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Trang chủ</a></li>
            <li class="breadcrumb-item active" aria-current="page">Giỏ hàng</li>
        </ol>
    </nav>

    <h2 class="mb-4">Giỏ hàng của bạn</h2>

    @if (Model.Items.Any())
    {
        <div class="row">
            <!-- Cart Items -->
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-body">
                        @foreach (var item in Model.Items)
                        {
                            <div class="cart-item border-bottom py-3" data-cart-item-id="@item.Id">
                                <div class="row align-items-center">
                                    <div class="col-md-2">
                                        <img src="@item.ProductImageUrl" alt="@item.ProductName" class="img-fluid rounded">
                                    </div>
                                    <div class="col-md-4">
                                        <h6 class="mb-1">@item.ProductName</h6>
                                        <small class="text-muted">ID: @item.ProductId</small>
                                    </div>
                                    <div class="col-md-2">
                                        <span class="fw-bold text-primary">@item.Price.ToString("N0") ₫</span>
                                    </div>
                                    <div class="col-md-2">
                                        <div class="input-group input-group-sm">
                                            <button class="btn btn-outline-secondary decrease-qty" type="button" data-cart-item-id="@item.Id">-</button>
                                            <input type="number" class="form-control text-center quantity-input" value="@item.Quantity" min="1" max="@item.Stock" data-cart-item-id="@item.Id">
                                            <button class="btn btn-outline-secondary increase-qty" type="button" data-cart-item-id="@item.Id">+</button>
                                        </div>
                                        @if (!item.IsAvailable)
                                        {
                                            <small class="text-danger">Hết hàng</small>
                                        }
                                    </div>
                                    <div class="col-md-1">
                                        <span class="fw-bold total-price">@item.TotalPrice.ToString("N0") ₫</span>
                                    </div>
                                    <div class="col-md-1">
                                        <button class="btn btn-outline-danger btn-sm remove-item" data-cart-item-id="@item.Id">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>

                <!-- Continue Shopping -->
                <div class="mt-3">
                    <a href="@Url.Action("Index", "Product")" class="btn btn-outline-primary">
                        <i class="fas fa-arrow-left me-2"></i>Tiếp tục mua sắm
                    </a>
                </div>
            </div>

            <!-- Order Summary -->
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">Tóm tắt đơn hàng</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Tạm tính:</span>
                            <span id="subtotal">@Model.SubTotal.ToString("N0") ₫</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span>Phí vận chuyển:</span>
                            <span id="shipping-fee">@Model.ShippingFee.ToString("N0") ₫</span>
                        </div>
                        <hr>
                        <div class="d-flex justify-content-between mb-3">
                            <strong>Tổng cộng:</strong>
                            <strong class="text-primary" id="total-amount">@Model.TotalAmount.ToString("N0") ₫</strong>
                        </div>
                        <div class="d-grid">
                            <a href="@Url.Action("Checkout")" class="btn btn-primary btn-lg">
                                <i class="fas fa-credit-card me-2"></i>Thanh toán
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Security Info -->
                <div class="card mt-3">
                    <div class="card-body">
                        <h6 class="card-title">
                            <i class="fas fa-shield-alt text-success me-2"></i>Mua sắm an toàn
                        </h6>
                        <ul class="list-unstyled small">
                            <li><i class="fas fa-check text-success me-2"></i>Thanh toán bảo mật</li>
                            <li><i class="fas fa-check text-success me-2"></i>Giao hàng nhanh chóng</li>
                            <li><i class="fas fa-check text-success me-2"></i>Đổi trả dễ dàng</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- Empty Cart -->
        <div class="text-center py-5">
            <i class="fas fa-shopping-cart fa-4x text-muted mb-4"></i>
            <h3>Giỏ hàng trống</h3>
            <p class="text-muted mb-4">Bạn chưa có sản phẩm nào trong giỏ hàng. Hãy bắt đầu mua sắm!</p>
            <a href="@Url.Action("Index", "Product")" class="btn btn-primary btn-lg">
                <i class="fas fa-shopping-bag me-2"></i>Bắt đầu mua sắm
            </a>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Update quantity
            $('.quantity-input').on('change', function() {
                var cartItemId = $(this).data('cart-item-id');
                var quantity = $(this).val();
                updateQuantity(cartItemId, quantity);
            });

            // Increase quantity
            $('.increase-qty').click(function() {
                var cartItemId = $(this).data('cart-item-id');
                var input = $('.quantity-input[data-cart-item-id="' + cartItemId + '"]');
                var currentVal = parseInt(input.val());
                var maxVal = parseInt(input.attr('max'));
                if (currentVal < maxVal) {
                    input.val(currentVal + 1);
                    updateQuantity(cartItemId, currentVal + 1);
                }
            });

            // Decrease quantity
            $('.decrease-qty').click(function() {
                var cartItemId = $(this).data('cart-item-id');
                var input = $('.quantity-input[data-cart-item-id="' + cartItemId + '"]');
                var currentVal = parseInt(input.val());
                if (currentVal > 1) {
                    input.val(currentVal - 1);
                    updateQuantity(cartItemId, currentVal - 1);
                }
            });

            // Remove item
            $('.remove-item').click(function() {
                var cartItemId = $(this).data('cart-item-id');
                if (confirm('Bạn có chắc chắn muốn xóa sản phẩm này khỏi giỏ hàng?')) {
                    removeFromCart(cartItemId);
                }
            });

            function updateQuantity(cartItemId, quantity) {
                $.ajax({
                    url: '@Url.Action("UpdateQuantity", "Cart")',
                    type: 'POST',
                    data: {
                        cartItemId: cartItemId,
                        quantity: quantity
                    },
                    success: function(response) {
                        if (response.success) {
                            // Update total price for this item
                            var totalPrice = response.totalPrice;
                            $('.cart-item[data-cart-item-id="' + cartItemId + '"] .total-price').text(totalPrice.toLocaleString() + ' ₫');
                            
                            // Update order summary
                            $('#subtotal').text(response.subTotal.toLocaleString() + ' ₫');
                            $('#shipping-fee').text(response.shippingFee.toLocaleString() + ' ₫');
                            $('#total-amount').text(response.totalAmount.toLocaleString() + ' ₫');
                            
                            // Update cart count in header if exists
                            if (response.cartCount) {
                                $('.cart-count').text(response.cartCount);
                            }
                        } else {
                            showAlert('danger', response.message);
                        }
                    },
                    error: function() {
                        showAlert('danger', 'Có lỗi xảy ra. Vui lòng thử lại.');
                    }
                });
            }

            function removeFromCart(cartItemId) {
                $.ajax({
                    url: '@Url.Action("RemoveFromCart", "Cart")',
                    type: 'POST',
                    data: {
                        cartItemId: cartItemId
                    },
                    success: function(response) {
                        if (response.success) {
                            // Remove item from UI
                            $('.cart-item[data-cart-item-id="' + cartItemId + '"]').fadeOut();
                            
                            // Update order summary
                            $('#subtotal').text(response.subTotal.toLocaleString() + ' ₫');
                            $('#shipping-fee').text(response.shippingFee.toLocaleString() + ' ₫');
                            $('#total-amount').text(response.totalAmount.toLocaleString() + ' ₫');
                            
                            // Update cart count in header if exists
                            if (response.cartCount) {
                                $('.cart-count').text(response.cartCount);
                            }
                            
                            // If cart is empty, reload page
                            if (response.cartCount === 0) {
                                setTimeout(function() {
                                    location.reload();
                                }, 500);
                            }
                            
                            showAlert('success', response.message);
                        } else {
                            showAlert('danger', response.message);
                        }
                    },
                    error: function() {
                        showAlert('danger', 'Có lỗi xảy ra. Vui lòng thử lại.');
                    }
                });
            }

            function showAlert(type, message) {
                var alertHtml = '<div class="alert alert-' + type + ' alert-dismissible fade show" role="alert">' +
                    message +
                    '<button type="button" class="btn-close" data-bs-dismiss="alert"></button>' +
                    '</div>';
                
                // Remove existing alerts
                $('.alert').remove();
                
                // Add new alert at the top
                $('.container').prepend(alertHtml);
                
                // Auto hide after 3 seconds
                setTimeout(function() {
                    $('.alert').fadeOut();
                }, 3000);
            }
        });
    </script>
}
