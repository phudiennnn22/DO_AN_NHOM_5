@model List<DOAN.Models.ProductReview>
@{
    ViewData["Title"] = "Đánh giá của tôi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">
            <i class="fas fa-star me-2"></i>Đánh giá của tôi
        </h1>
        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i>Về trang chủ
        </a>
    </div>

    @if (Model.Any())
    {
        <div class="row">
            @foreach (var review in Model)
            {
                <div class="col-lg-6 mb-4">
                    <div class="card shadow">
                        <div class="card-header py-3 d-flex justify-content-between align-items-center">
                            <h6 class="m-0 font-weight-bold text-primary">
                                @review.Product?.Name
                            </h6>
                            <span class="badge bg-@(review.IsApproved ? "success" : "warning")">
                                @(review.IsApproved ? "Đã duyệt" : "Chờ duyệt")
                            </span>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-4">
                                    <img src="@review.Product?.ImageUrl" alt="@review.Product?.Name" 
                                         class="img-fluid rounded" style="max-height: 120px; object-fit: cover;">
                                </div>
                                <div class="col-md-8">
                                    <div class="d-flex align-items-center mb-2">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            if (i <= review.Rating)
                                            {
                                                <i class="fas fa-star text-warning"></i>
                                            }
                                            else
                                            {
                                                <i class="far fa-star text-muted"></i>
                                            }
                                        }
                                        <span class="ms-2">(@review.Rating/5)</span>
                                    </div>
                                    
                                    @if (!string.IsNullOrEmpty(review.Title))
                                    {
                                        <h6 class="mb-2">@review.Title</h6>
                                    }
                                    
                                    <p class="text-muted mb-2">@review.Comment</p>
                                    
                                    <small class="text-muted">
                                        <i class="fas fa-calendar me-1"></i>
                                        @review.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                                    </small>
                                </div>
                            </div>
                            
                            <hr>
                            
                            <div class="d-flex justify-content-end">
                                <button type="button" class="btn btn-sm btn-info" onclick="viewReviewDetails(@review.Id)">
                                    <i class="fas fa-eye me-1"></i>Chi tiết
                                </button>
                                @if (!review.IsApproved)
                                {
                                    <button type="button" class="btn btn-sm btn-warning ms-2" onclick="editReview(@review.Id)">
                                        <i class="fas fa-edit me-1"></i>Chỉnh sửa
                                    </button>
                                }
                                <button type="button" class="btn btn-sm btn-danger ms-2" onclick="deleteReview(@review.Id)">
                                    <i class="fas fa-trash me-1"></i>Xóa
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-star fa-4x text-muted mb-3"></i>
            <h4 class="text-muted">Bạn chưa có đánh giá nào</h4>
            <p class="text-muted">Hãy mua sản phẩm và đánh giá để chia sẻ trải nghiệm của bạn!</p>
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                <i class="fas fa-shopping-cart me-2"></i>Mua sắm ngay
            </a>
        </div>
    }
</div>

<!-- Review Details Modal -->
<div class="modal fade" id="reviewDetailsModal" tabindex="-1" aria-labelledby="reviewDetailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="reviewDetailsModalLabel">Chi tiết đánh giá</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="reviewDetailsContent">
                <!-- Review details will be loaded here -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>

<script>
function viewReviewDetails(reviewId) {
    // Simulate loading review details
    $('#reviewDetailsContent').html(`
        <div class="row">
            <div class="col-md-4">
                <img src="https://images.unsplash.com/photo-1592750475338-74b7b21085ab?w=300&h=300&fit=crop" 
                     class="img-fluid rounded">
            </div>
            <div class="col-md-8">
                <h5>iPhone 15 Pro Max</h5>
                <div class="d-flex align-items-center mb-3">
                    <div class="me-3">
                        @for (int i = 1; i <= 5; i++)
                        {
                            <i class="fas fa-star text-warning"></i>
                        }
                    </div>
                    <span class="badge bg-success">Đã duyệt</span>
                </div>
                
                <h6>Tiêu đề:</h6>
                <p>Sản phẩm tuyệt vời!</p>
                
                <h6>Nhận xét:</h6>
                <p>Sản phẩm rất tốt, chất lượng cao, giao hàng nhanh. Tôi rất hài lòng với sản phẩm này! Camera chụp ảnh rất đẹp, pin trâu, hiệu năng mượt mà.</p>
                
                <hr>
                
                <div class="row">
                    <div class="col-md-6">
                        <strong>Ngày đánh giá:</strong><br>
                        <span class="text-muted">20/09/2025 14:30</span>
                    </div>
                    <div class="col-md-6">
                        <strong>Trạng thái:</strong><br>
                        <span class="badge bg-success">Đã duyệt</span>
                    </div>
                </div>
            </div>
        </div>
    `);
    
    $('#reviewDetailsModal').modal('show');
}

function editReview(reviewId) {
    // Redirect to edit review page
    window.location.href = '@Url.Action("Edit", "ProductReview")' + '?id=' + reviewId;
}

function deleteReview(reviewId) {
    if (confirm('Bạn có chắc chắn muốn xóa đánh giá này?')) {
        // Simulate API call
        alert('Đánh giá đã được xóa!');
        location.reload();
    }
}
</script>
